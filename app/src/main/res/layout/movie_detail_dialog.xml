<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialog_fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFragmentTitle"
        tools:text="Movie's information"
        android:textAllCaps="true"
        android:textSize="@dimen/dialog_title_size"
        android:textStyle="bold"
        android:text="No movie to display"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFragmentOverview"
        tools:text="Movie's information"
        android:textSize="@dimen/dialog_overview_size"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFragmentRating"
        tools:text="Movie's information"
        android:textSize="@dimen/dialog_rating_size"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFragmentPopularity"
        tools:text="Movie's information"
        android:textSize="@dimen/dialog_popularity_size"
        />

</LinearLayout>